<Page
    x:Class="UWP_ImagefapDownloader.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_ImagefapDownloader"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    >

    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="Style_TextBlock_1">
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="Style_TextBlock_2">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="Button" x:Key="Style_Button_1">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="72"/>
        </Style>
    </Page.Resources>
    
    <Page.TopAppBar>
        <CommandBar IsOpen="False" ClosedDisplayMode="Compact" IsSticky="True">
            <AppBarButton Icon="Setting" Label="Setting"/>
        </CommandBar>
    </Page.TopAppBar>


    
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Imagefap Downloader"  Margin="0,0,0,8"
                   HorizontalAlignment="Center" FontSize="72" FontWeight="Bold"/>
        <Grid Margin="0,0,0,8" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" FontSize="16" Text="{x:Bind UrlInput, Mode=TwoWay}"
                     PlaceholderText="Please enter the url..."/>
            <Button Grid.Column="1" x:Name="Button_Add"
                        Style="{StaticResource Style_Button_1}" Margin="8,0,0,0" 
                        ToolTipService.ToolTip="Add url to the download list."
                    Click="Button_Add_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="Add" Margin="0,0,4,0"/>
                        <TextBlock Text="Add"/>
                    </StackPanel>
                </Button.Content>
            </Button>

        </Grid>
        <ListView SelectionMode="Single" Grid.Row="2" Margin="0,0,0,8" 
                  ItemsSource="{x:Bind AlbumCollection}" x:Name="ListView_1">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:Album" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Background="Transparent" VerticalAlignment="Center"
                                ToolTipService.ToolTip="Delete this album" x:Name="Button_Delete"
                                Click="Button_Delete_Click">
                            <SymbolIcon Symbol="Delete"/>
                        </Button>
                        <TextBlock Style="{StaticResource Style_TextBlock_1}" 
                               Text="{x:Bind AlbumUrl}" VerticalAlignment="Center"
                                   Margin="12,0" Grid.Column="1" Width="auto" />
                        <SymbolIcon Symbol="{x:Bind DownloadStateIcon}" 
                                    Grid.Column="2"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid Grid.Row="3" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <!--<ColumnDefinition Width="auto"/>-->
            </Grid.ColumnDefinitions>
            <Button Style="{StaticResource Style_Button_1}" 
                    ToolTipService.ToolTip="Select download folder" x:Name="Button_SelectFolder"
                    Click="Button_SelectFolder_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="Folder" Margin="0,0,4,0"/>
                        <TextBlock Text="To"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <TextBlock FontSize="16" Grid.Column="1" Text="{x:Bind DownloadFolder.Path,Mode=OneWay}"
                       VerticalAlignment="Center"/>
            <ToggleButton Grid.Column="2" x:Name="ToggleButton_Run" 
                          Click="ToggleButton_Run_Click" Width="256">
                <ToggleButton.Content>
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="Download" Margin="0,0,4,0"/>
                        <TextBlock Text="Download/Pause" x:Name="TextBlock_DownloadOrPause"/>
                    </StackPanel>
                </ToggleButton.Content>
            </ToggleButton>
        </Grid>
        <Grid Grid.Row="4" Background="LightGray">
            <TextBlock Text="Downloading" Style="{StaticResource Style_TextBlock_1}"/>
            <TextBlock/>
        </Grid>
    </Grid>

</Page>
